const bigPictureView = document.querySelector('.big-picture');
const pictureCloseButton = document.querySelector('.big-picture__cancel');

const closeBigPicture = () => {
  bigPictureView.classList.add('hidden');
};

const onBigPictureEscKeydown = (evt) => {
  if (evt.key === 'Escape'){
    closeBigPicture();

    document.removeEventListener('keydown', onBigPictureEscKeydown);
  }
};
const onCloseButtonClick = () => {
  closeBigPicture();

  pictureCloseButton.removeEventListener('click', onCloseButtonClick);
};

const showBigPicture = (picture) => {
  const {url, description, likes, comments} = picture;
  bigPictureView.classList.remove('hidden');
  document.body.classList.add('modal-open');

  bigPictureView.querySelector('.big-picture__img').src = url;
  bigPictureView.querySelector('.likes-count').textContent = likes;
  bigPictureView.querySelector('.social__comment-shown-count').textContent = comments.length;
  bigPictureView.querySelector('.social__caption').textContent = description;

  document.addEventListener('keydown', onBigPictureEscKeydown);
  pictureCloseButton.addEventListener('click', onCloseButtonClick);
};

export {showBigPicture};
